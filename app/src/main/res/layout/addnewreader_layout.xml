<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_Reader_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_info_background"
        app:layout_constraintTop_toTopOf="@id/add_Reader_background"
        app:layout_constraintLeft_toLeftOf="@id/add_Reader_background">
        <TextView
            android:id="@+id/id_textView"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ID"
            android:textAlignment="center"
            android:textSize="25dp"
            app:layout_constraintLeft_toLeftOf="@id/add_info_background"
            app:layout_constraintTop_toTopOf="@id/add_info_background" />
        <EditText
            android:id="@+id/id_Edit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintRight_toLeftOf="@id/name_Edit"
            app:layout_constraintLeft_toRightOf="@id/name_Edit"
            app:layout_constraintBottom_toTopOf="@id/name_Edit"  />

        <TextView
            android:id="@+id/name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textSize="25dp"
            app:layout_constraintLeft_toLeftOf="@id/add_info_background"
            app:layout_constraintTop_toBottomOf="@id/id_textView" />
        <EditText
            android:id="@+id/name_Edit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toRightOf="@id/name_textView"
            app:layout_constraintTop_toBottomOf="@id/id_Edit" />

        <TextView
            android:id="@+id/sex_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:text="Sex"
            android:textSize="25dp"
            app:layout_constraintHorizontal_bias="0.615"
            app:layout_constraintLeft_toLeftOf="@id/add_info_background"
            app:layout_constraintRight_toLeftOf="@id/sex_Edit"
            app:layout_constraintTop_toBottomOf="@id/name_textView" />
        <EditText
            android:id="@+id/sex_Edit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintRight_toLeftOf="@id/name_Edit"
            app:layout_constraintLeft_toRightOf="@id/name_Edit"
            app:layout_constraintTop_toBottomOf="@id/name_Edit" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/submit_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/add_info_background"
        app:layout_constraintRight_toLeftOf="@id/add_info_background"
        app:layout_constraintLeft_toRightOf="@id/add_info_background">
        <Button
            android:id="@+id/Sumbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"/>
        <Button
            android:id="@+id/Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
