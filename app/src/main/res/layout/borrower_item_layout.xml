<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:stretchColumns="6">
        <TextView
            android:id="@+id/item_borrowerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:1234"
            android:textSize="25dp"
            />
        <TextView
            android:id="@+id/item_borrowerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/item_borrowerSex"
            android:text="Sex:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/item_borrowDate"
            android:text="BorrowDate:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"/>

        <TableRow>

            <TextView
                android:id="@+id/item_returnDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ReturnDate:"
                android:textSize="25dp" />

            <Button
                android:id="@+id/item_returBook_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Return"
                android:textSize="15sp" />
        </TableRow>
    </TableLayout>

</LinearLayout>