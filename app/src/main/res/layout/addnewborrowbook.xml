<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_borrowerBook_background"
    android:background="#FFFAF0">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_infoBorrowbook_background"
        app:layout_constraintTop_toTopOf="@id/add_borrowerBook_background"
        app:layout_constraintLeft_toLeftOf="@id/add_borrowerBook_background">
        <LinearLayout
            android:id="@+id/Edit_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/add_infoBorrowbook_background"
            app:layout_constraintRight_toLeftOf="@id/add_infoBorrowbook_background"
            app:layout_constraintLeft_toRightOf="@id/add_infoBorrowbook_background">
            <TextView
                android:id="@+id/addborrowbook_textView"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ISBN:"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textColor="#1C86EE"/>
            <EditText
                android:id="@+id/borrowISBN_Edit"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textColor="#1C86EE"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/submit_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/add_infoBorrowbook_background"
        app:layout_constraintRight_toLeftOf="@id/add_infoBorrowbook_background"
        app:layout_constraintLeft_toRightOf="@id/add_infoBorrowbook_background">
        <Button
            android:id="@+id/borrowbookSumbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:textColor="#1C86EE"/>
        <Button
            android:id="@+id/borrowbookCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:textColor="#1C86EE"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>